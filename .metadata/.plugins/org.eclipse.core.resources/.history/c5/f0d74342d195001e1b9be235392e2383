package main;

import java.util.Scanner;

public class Main {

	public static void main(String[] args) {

		// Annual income calculator program

		String name;
		String surname;
		double averageSalary;
		int monthlyPayments;
		double annualSalary;
		String answer;
		Scanner keyboard;

		keyboard = new Scanner(System.in);
		answer = "";

		System.out.println("Your name: ");
		name = keyboard.nextLine();
		System.out.println("Your surname: ");
		surname = keyboard.nextLine();
		System.out.println("Your average salary: ");
		averageSalary = Double.parseDouble(keyboard.nextLine());
		System.out.println("Your monthly payments: ");
		monthlyPayments = Integer.parseInt(keyboard.nextLine());
		annualSalary = 0;

		annualSalary = averageSalary * monthlyPayments;
		keyboard.close();

		answer = "Hello mr./mrs. " + name + surname + " your annual salary is " + annualSalary + "$";
		System.out.println(answer);
	}

}